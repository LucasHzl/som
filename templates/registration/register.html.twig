{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="flex justify-center items-center min-h-screen bg-gray-100">
    <div class="max-w-md w-full bg-white p-8 shadow-md rounded">
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                <span class="block sm:inline">{{ flash_error }}</span>
            </div>
        {% endfor %}

        <h1 class="text-3xl font-bold mb-6">Inscription staff</h1>

        {{ form_start(registrationForm, { 'attr': { 'class': 'space-y-4' } }) }}
            <div>
                {{ form_label(registrationForm.email, null, { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700' } }) }}
                {{ form_widget(registrationForm.email, { 'attr': { 'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' } }) }}
                {{ form_errors(registrationForm.email, { 'attr': { 'class': 'text-red-500 text-sm mt-1' } }) }}
            </div>
            <div>
                {{ form_label(registrationForm.first_name, null, { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700' } }) }}
                {{ form_widget(registrationForm.first_name, { 'attr': { 'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' } }) }}
                {{ form_errors(registrationForm.first_name, { 'attr': { 'class': 'text-red-500 text-sm mt-1' } }) }}
            </div>
            <div>
                {{ form_label(registrationForm.last_name, null, { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700' } }) }}
                {{ form_widget(registrationForm.last_name, { 'attr': { 'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' } }) }}
                {{ form_errors(registrationForm.last_name, { 'attr': { 'class': 'text-red-500 text-sm mt-1' } }) }}
            </div>
            <div>
                {{ form_label(registrationForm.phone, null, { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700' } }) }}
                {{ form_widget(registrationForm.phone, { 'attr': { 'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' } }) }}
                {{ form_errors(registrationForm.phone, { 'attr': { 'class': 'text-red-500 text-sm mt-1' } }) }}
            </div>
            <div>
                {{ form_label(registrationForm.plainPassword, null, { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700' } }) }}
                {{ form_widget(registrationForm.plainPassword, { 'attr': { 'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' } }) }}
                {{ form_errors(registrationForm.plainPassword, { 'attr': { 'class': 'text-red-500 text-sm mt-1' } }) }}
            </div>
            <div>
                {{ form_widget(registrationForm.agreeTerms, { 'attr': { 'class': 'mr-2' } }) }}
                {{ form_label(registrationForm.agreeTerms, null, { 'label_attr': { 'class': 'text-sm font-medium text-gray-700' } }) }}
                {{ form_errors(registrationForm.agreeTerms, { 'attr': { 'class': 'text-red-500 text-sm mt-1' } }) }}
            </div>
            <div>
                {{ form_label(registrationForm.roles, null, { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700' } }) }}
                <div class="flex items-center mt-2">
                    {% for choice in registrationForm.roles %}
                        <div class="mr-4">
                            {{ form_widget(choice, { 'attr': { 'class': 'mr-2' } }) }}
                            {{ form_label(choice, null, { 'label_attr': { 'class': 'text-sm font-medium text-gray-700' } }) }}
                        </div>
                    {% endfor %}
                </div>
                {{ form_errors(registrationForm.roles, { 'attr': { 'class': 'text-red-500 text-sm mt-1' } }) }}
            </div>
            <button type="submit" class="w-full py-2 px-4 bg-indigo-600 text-white font-semibold rounded-md shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 mt-6">
                Inscription
            </button>
        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}
