{% extends 'base.html.twig' %}

{% block title %}Ticket index{% endblock %}

{% block body %}
    <h1>Ticket index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ticked_id</th>
                <th>Creation_date</th>
                <th>Description</th>
                <th>Priority</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ticket in tickets %}
            <tr>
                <td>{{ ticket.id }}</td>
                <td>{{ ticket.tickedId }}</td>
                <td>{{ ticket.creationDate ? ticket.creationDate|date('Y-m-d') : '' }}</td>
                <td>{{ ticket.description }}</td>
                <td>{{ ticket.priority ? ticket.priority|json_encode : '' }}</td>
                <td>{{ ticket.status ? ticket.status|json_encode : '' }}</td>
                <td>
                    <a href="{{ path('app_ticket_show', {'id': ticket.id}) }}">show</a>
                    <a href="{{ path('app_ticket_edit', {'id': ticket.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_ticket_new') }}">Create new</a>
{% endblock %}
